<%- include("partials/header.ejs") %>
<div style=" height:100vh ; width: 100%;  background-image: linear-gradient(to top, #cfd9df 0%, #e2ebf0 100%);">
    <div style="display: flex; justify-content: center; align-items: center; padding-top: 50px;">
        <div class="col-lg-6 col-md-12 mobile-mb-50 mb-170">
            <div class="contact-comment-section">
                <h3 style="align-items: center; font-size: xxx-large; font-weight: 400; ">Leave us a Message</h3>
                <div id="form-messages"></div>
                <form id="contact-form" method="post" action="" role="form">
                    <div class="messages"></div>
                    <fieldset>
                        <div class="row pt-10">
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label for="form_name" >Firstname *</label>
                                    <input id="form_name" type="text" name="fname" class="form-control" placeholder="Please enter your firstname *" required="required" data-error="Firstname is required." fdprocessedid="myszjs">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label for="form_lastname">Lastname *</label>
                                    <input id="form_lastname" type="text" name="lname" class="form-control" placeholder="Please enter your lastname *" required="required" data-error="Lastname is required." fdprocessedid="jry835">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row pt-10">
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label for="form_email">Email *</label>
                                    <input id="form_email" type="email" name="email" class="form-control" placeholder="Please enter your email *" required="required" data-error="Valid email is required." fdprocessedid="ack9zrp">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label for="form_phone">Mobile</label>
                                    <input id="form_phone" type="tel" name="phone" class="form-control" placeholder="Please enter your Mobile no" fdprocessedid="ih8l2">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row pt-10">
                            <div class="col-md-12 col-sm-12 ">
                                <label>Subject <span class="text-danger">*</span></label>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="Help" checked="">
                                    <label class="form-check-label" for="inlineRadio2">Help</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="Feedback">
                                    <label class="form-check-label" for="inlineRadio3">Feedback</label>
                                </div>
                            
                            </div>
                        </div>
                        <div class="row pt-10">
                            <div class="col-md-12 col-sm-12 pt-10">
                                <div class="form-group">
                                    <label for="form_message">Message *</label>
                                    <textarea id="form_message" name="message" class="form-control" placeholder="Please, leave us a message. *" rows="4" required="required" data-error="Please, leave us a message."></textarea>
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        </div>
                    
        
                        <div class="form-group mb-10 mt-20 pt-30" style="display: flex; justify-content: center; margin-top: 20px;">
                         
                            <input class="btn btn-success" type="button" name="submit" value="Submit Now" onclick="sendMail()">
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    
</div>

<%- include("partials/footer.ejs") %>