<%- include("partials/header.ejs") %>
<div style=" height:100vh ; width: 100%;  background-image: linear-gradient(to top, #cfd9df 0%, #e2ebf0 100%);">
    <div style="display: flex; justify-content: center; align-items: center; padding-top: 50px;">
        <div class="col-lg-6 col-md-12 mobile-mb-50 mb-170">
            <div class="contact-comment-section">
                <h3 style="align-items: center; font-size: xxx-large; font-weight: 400; justify-content: center;" >Sell a Product</h3>
                <div id="form-messages"></div>
                <form id="contact-form" method="post" action="/sell" role="form"  enctype="multipart/form-data">
                    <div class="messages"></div>
                    <fieldset>
                        <div class="row pt-10" style="display: flex; justify-content: center;">
                            <div class="col-md-12 col-sm-12 pt-10">
                                <div class="form-group">
                                    <label for="form_name" >Title *</label>
                                    <input id="form_name" type="text" name="title" class="form-control" placeholder="Please enter Title*" required="required" data-error="Title is required." fdprocessedid="myszjs">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            
                        </div>
                        
                        <div class="row pt-10">
                            <div class="col-md-12 col-sm-12 pt-10">
                                <div class="form-group">
                                    <label for="form_message">Description *</label>
                                    <textarea id="form_message" name="description" class="form-control" placeholder="Please, enter description of your Product *" rows="4" required="required" data-error="Please, enter description"></textarea>
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row pt-10" style="display: flex; justify-content: center;">
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label for="form_name" >Price *</label>
                                    <input id="form_name" type="text" name="price" class="form-control" placeholder="Please enter Price*" required="required" data-error="Price is required." fdprocessedid="myszjs">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label for="form_name" >Year Used (in Months)*</label>
                                    <input id="form_name" type="text" name="year" class="form-control" placeholder="Please enter year used *" required="required" data-error="year used  is required." fdprocessedid="myszjs">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            
                        </div>
                        <div style="display: flex;justify-content: center;margin-top: 10px;">
                            <div class="form-group">
                                <label for="exampleFormControlFile1">Upload Pic *</label>
                                <input type="file" class="form-control-file" id="exampleFormControlFile1" name="pic">
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-success" style=" justify-content: center;">Submit</button>
                        
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    
</div>

<%- include("partials/footer.ejs") %>